<%- include('layout', {
        body: `
            <div class="row mt-5">
                <div class="col-md-6 m-auto">
                    <div class="card card-body">
                        <h1 class="text-center mb-3">
                            <i class="fas fa-user-circle"></i> Profile
                        </h1>
                        <div class="text-center mb-4">
                            <img id="avatarPreview" src="/img/${user.avatar}" alt="${user.name}" class="rounded-circle" width="100" height="100">
                        </div>
                        <form action="/users/profile" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="avatar" class="form-label">Profile Photo</label>
                                <input class="form-control" type="file" id="avatar" name="avatar" accept="image/*">
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" name="name" class="form-control" value="${user.name}" required />
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" value="${user.email}" required />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block w-100">Update Profile</button>
                        </form>
                        <a href="/chat" class="btn btn-secondary btn-block w-100 mt-3">Back to Chat</a>
                    </div>
                </div>
            </div>

            <script>
                const avatarInput = document.getElementById('avatar');
                if (avatarInput) {
                    avatarInput.addEventListener('change', function(e) {
                        const file = e.target.files[0];
                        if (!file) return;
                        const url = URL.createObjectURL(file);
                        document.getElementById('avatarPreview').src = url;
                    });
                }
            </script>
        `
}) %>